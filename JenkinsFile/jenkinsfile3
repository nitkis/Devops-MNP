pipeline {
	agent {label "mnp-app-slave"}
		stages {
			stage("hello Jenkins") {
				steps {
					sh "sudo ls -l /home"
					}
				}
			stage("displaying build number of particular job") {
				steps {
					sh "sudo echo job name is : $JOB_NAME and build number is : $BUILD_NUMBER and it started at TimeStamp: ${currentBuild.startTimeInMillis}"
					}
				}
			}
}

